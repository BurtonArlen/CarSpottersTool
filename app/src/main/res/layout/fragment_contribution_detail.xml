<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.guest.carspotterstool.ui.ContributionDetailFragment">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0">
            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pagerHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />
        </android.support.v4.view.ViewPager>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Make"
            android:textSize="20sp"
            android:id="@+id/makeText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/viewPager"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/viewPager"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/viewPager" />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Model"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/makeText"
            android:id="@+id/modelText"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/viewPager"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/viewPager" />
        <TextView
            android:id="@+id/yearText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/modelText"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/viewPager"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/viewPager" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/yearText"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
