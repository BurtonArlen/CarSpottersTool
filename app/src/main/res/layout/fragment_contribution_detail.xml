<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ContributionDetailFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/scrollPhoto"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />
        <TextView
            android:id="@+id/photoCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo Credit"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/scrollPhoto"
            app:layout_constraintBottom_toBottomOf="@+id/scrollPhoto"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Make"
            android:textSize="20sp"
            android:id="@+id/makeText"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollPhoto"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/upVoteButton" />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Model"
            android:textSize="20sp"
            android:id="@+id/modelText"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/makeText"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/upVoteButton" />
        <TextView
            android:id="@+id/yearText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/modelText"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/upVoteButton" />

        <Button
            android:id="@+id/upVoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="View Profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
